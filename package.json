{
  "name": "playwright-tests",
  "version": "1.0.0",
  "description": "Stajyer projesi - Frontend ve Backend testleri",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:frontend": "playwright test frontend-tests/",
    "test:backend": "playwright test --config=backend-tests/playwright.config.ts",
    "test:store": "playwright test backend-tests/tests/storeApi.spec.ts --config=backend-tests/playwright.config.ts",
    "test:pet": "playwright test backend-tests/tests/petApi.spec.ts --config=backend-tests/playwright.config.ts",
    "test:user": "playwright test backend-tests/tests/userApi.spec.ts --config=backend-tests/playwright.config.ts",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --headed --debug",
    "test:debug-frontend": "playwright test frontend-tests/ --headed --debug",
    "test:debug-store": "playwright test backend-tests/tests/storeApi.spec.ts --config=backend-tests/playwright.config.ts --headed --debug",
    "test:debug-user": "playwright test backend-tests/tests/userApi.spec.ts --config=backend-tests/playwright.config.ts --headed --debug",
    "report": "playwright show-report"
  },
  "keywords": [
    "playwright",
    "testing",
    "frontend",
    "backend"
  ],
  "author": "Stajyer",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.1",
    "dotenv": "^17.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
